#include<stdio.h>


//Faça um programa que leia um número e retorne o fatorial deste número.

int main(){
	
	
	int numero=0, fatorial;
	
	
	printf("Digite um numero para retornar seu fatorial: \n");
	scanf("%d", &numero);
	
	if(numero>=1 && numero <=20){
		for(fatorial=1; numero>1; numero--){
			
			fatorial = fatorial * numero;
			
		}
		printf("O fatorial e : %d ", fatorial);
	}
	
	return 0;
}
