#include<stdio.h>



int main(){
	
	char nome1[50], nome2[50];
	int i, k;
	
	printf("\n Digite o primeiro nome: \n");
	
	scanf("\n %s", &nome1);
	
	printf("\n Digite o segundo nome: ");
	
	scanf("\n %s", &nome2);
	
	for(i=0; nome1[i]!='\0'; ++i);{
	
		for(k=0; nome2[k]!='\0'; ++k){
			
			nome1[i] = nome2[k];
			++i;
		
		}
	nome2[i]='\0';
	printf("\n %s  \n", nome1);
		
	

	}
	
	
return 0;
		
}
